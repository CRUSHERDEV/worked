# =============================================
# Linked All v1 - Environment Variables
# =============================================
# Copy this file to .env.local and fill in your values

# =============================================
# ENVIRONMENT
# =============================================
NODE_ENV=development

# =============================================
# SUPABASE
# =============================================
SUPABASE_URL=your-supabase-project-url
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-role-key

# =============================================
# API SERVICES
# =============================================
API_GATEWAY_URL=http://localhost:3001
MARKETPLACE_SERVICE_URL=http://localhost:3002
ORDER_SERVICE_URL=http://localhost:3003
WALLET_SERVICE_URL=http://localhost:3004
AUTH_SERVICE_URL=http://localhost:3005
LOGISTICS_SERVICE_URL=http://localhost:3006

# =============================================
# PAYMENT PROVIDERS
# =============================================
# Stripe
STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Paystack
PAYSTACK_PUBLIC_KEY=
PAYSTACK_SECRET_KEY=
PAYSTACK_WEBHOOK_SECRET=

# Flutterwave
FLUTTERWAVE_PUBLIC_KEY=
FLUTTERWAVE_SECRET_KEY=
FLUTTERWAVE_ENCRYPTION_KEY=

# =============================================
# EXTERNAL SERVICES
# =============================================
# Redis
REDIS_URL=redis://localhost:6379

# Meilisearch
MEILISEARCH_URL=http://localhost:7700
MEILISEARCH_API_KEY=masterKey123

# AWS (for production)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=

# =============================================
# FEATURE FLAGS
# =============================================
FEATURE_MARKETPLACE=true
FEATURE_WALLET=true
FEATURE_LINKED_COIN=false
FEATURE_REFERRALS=true
FEATURE_STAKING=false
FEATURE_DELIVERY_TRACKING=true
FEATURE_RECOMMENDATIONS=false

# =============================================
# SECURITY
# =============================================
JWT_SECRET=your-jwt-secret-key-change-this
JWT_EXPIRY=3600
ENCRYPTION_KEY=your-encryption-key-change-this

# =============================================
# MONITORING & ANALYTICS
# =============================================
SENTRY_DSN=
GOOGLE_ANALYTICS_ID=
